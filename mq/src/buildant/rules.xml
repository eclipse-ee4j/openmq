  <!--  the basic targets are supported are:
             - all [clean, build, deploy, test]
             - build [build,docs]
             - test
             - clean
             - docs
             - deploy [install image, zip bundle]
    -->

  <target name="all" 
          depends="build, deploy, test"
          description="Builds the MQ product">
  </target>

