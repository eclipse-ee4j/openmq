	       perm="755"/>
		<symlink link="${ws.top.dir}/${solaris.installdir}/usr/lib/libimqutil.so" 
	         resource="libimqutil.so.1">
		</symlink>
		<symlink link="${ws.top.dir}/${solaris.installdir}/usr/lib/32"
	         resource="./">
		</symlink>

